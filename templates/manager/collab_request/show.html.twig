{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Examen Demande - CreaCo{% endblock %}
{% block breadcrumb %}Manager / Examen / {{ collab_request.title }}{% endblock %}
{% block page_title %}Examen de la demande{% endblock %}

{% block body %}
<div class="flex flex-wrap -mx-3">
    <!-- Analysis Panel -->
    <div class="w-full max-w-full px-3 lg:w-8/12">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6">
                    <h5 class="mb-0">Dossier #{{ collab_request.id }} : {{ collab_request.title }}</h5>
                    <span class="text-xs font-bold px-3 py-1 bg-gray-100 rounded-lg uppercase">Status: {{ collab_request.status }}</span>
                </div>

                <div class="mb-8 p-4 border border-fuchsia-100 bg-fuchsia-50/20 rounded-xl">
                    <h6 class="text-xs font-bold uppercase text-fuchsia-500 mb-2">Note d'intention du demandeur ({{ collab_request.creator.username }})</h6>
                    <p class="text-sm leading-relaxed text-slate-600 italic">"{{ collab_request.description }}"</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                    <div class="p-4 bg-gray-50 rounded-xl text-center">
                        <p class="text-xxs font-bold uppercase text-slate-400">Budget</p>
                        <p class="text-md font-bold text-slate-700">{{ collab_request.budget|number_format(2, ',', ' ') }} €</p>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-xl text-center">
                        <p class="text-xxs font-bold uppercase text-slate-400">Début</p>
                        <p class="text-md font-bold text-slate-700">{{ collab_request.startDate|date('d/m/Y') }}</p>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-xl text-center">
                        <p class="text-xxs font-bold uppercase text-slate-400">Fin estimée</p>
                        <p class="text-md font-bold text-slate-700">{{ collab_request.endDate|date('d/m/Y') }}</p>
                    </div>
                </div>

                <div class="mb-6">
                    <h6 class="text-xs font-bold uppercase text-slate-400 mb-2">Livrables détaillés</h6>
                    <p class="text-sm text-slate-600 bg-slate-50 p-4 rounded-lg whitespace-pre-wrap">{{ collab_request.deliverables }}</p>
                </div>

                <!-- Decision Section -->
                {% if collab_request.status == 'PENDING' %}
                <div class="mt-12 p-6 border-2 border-dashed border-gray-200 rounded-2xl">
                    <h6 class="mb-4">Votre décision</h6>
                    <div class="flex flex-wrap gap-4">
                        <!-- Approve -->
                        <form method="post" action="{{ path('app_manager_collab_request_approve', {id: collab_request.id}) }}" class="flex-1">
                            <button type="submit" onclick="return confirm('Approuver cette demande et générer le contrat ?')" class="w-full bg-gradient-to-tl from-green-600 to-lime-400 text-white font-bold py-3 rounded-xl uppercase text-xs shadow-soft-md transition-all hover:scale-102">
                                <i class="fa fa-check mr-2"></i> Approuver
                            </button>
                        </form>

                        <!-- Reject Trigger -->
                        <button type="button" onclick="document.getElementById('rejection-form').classList.toggle('hidden')" class="flex-1 bg-gradient-to-tl from-red-600 to-rose-400 text-white font-bold py-3 rounded-xl uppercase text-xs shadow-soft-md transition-all hover:scale-102">
                            <i class="fa fa-times mr-2"></i> Rejeter / Modifier
                        </button>
                    </div>

                    <!-- Hidden Rejection/Modification Form -->
                    <div id="rejection-form" class="mt-6 hidden pt-6 border-t">
                        <h6 class="text-xs font-bold uppercase mb-3">Motif ou Commentaire de modification</h6>
                        <form method="post" action="{{ path('app_manager_collab_request_reject', {id: collab_request.id}) }}">
                            <textarea name="rejection_reason[rejectionReason]" class="w-full text-sm p-3 border rounded-xl outline-none focus:border-fuchsia-300 transition-all mb-4" rows="3" placeholder="Expliquez les raisons du refus ou les modifications attendues..."></textarea>
                            <div class="flex space-x-2">
                                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-lg text-xs font-bold uppercase">Confirmer le rejet</button>
                                <button type="submit" formaction="{{ path('app_manager_collab_request_modify', {id: collab_request.id}) }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-xs font-bold uppercase">Demander des modifications</button>
                            </div>
                        </form>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Side Panel -->
    <div class="w-full max-w-full px-3 lg:w-4/12">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-4">
                <h6 class="mb-4">Données Partenaire</h6>
                <div class="p-4 bg-gray-50 rounded-xl mb-4">
                    <p class="text-xs font-bold text-slate-400 uppercase mb-1">Société</p>
                    <p class="text-sm font-bold text-slate-700">{{ collab_request.collaborator.companyName }}</p>
                </div>
                <div class="p-4 bg-gray-50 rounded-xl mb-4 text-xs">
                    <p class="font-bold text-slate-400 uppercase mb-1">Expérience précédente</p>
                    <p class="text-slate-600">{{ collab_request.collaborator.collabRequests|length }} collaboration(s) au total.</p>
                </div>
                <a href="{{ path('app_collaborator_show', {id: collab_request.collaborator.id}) }}" target="_blank" class="w-full inline-block text-center py-2 border rounded-lg text-xs font-bold text-slate-500 uppercase hover:bg-gray-50">Consulter le dossier complet</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
