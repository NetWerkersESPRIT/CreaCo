<form method="post" action="{{ path('app_users_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
	<button class="inline-block px-6 py-3 font-bold text-center text-red-500 uppercase align-middle transition-all bg-transparent border border-solid border-red-500 rounded-lg cursor-pointer leading-pro text-xs ease-soft-in shadow-soft-md hover:scale-102 active:opacity-85 hover:shadow-soft-xs">
		Supprimer
	</button>
</form>
