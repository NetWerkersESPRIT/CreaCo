{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="relative w-full p-4 mb-4 text-white rounded-lg bg-gradient-to-tl {% if label == 'success' %}from-green-600 to-lime-400{% elseif label == 'error' %}from-red-600 to-rose-400{% else %}from-slate-600 to-slate-300{% endif %}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
