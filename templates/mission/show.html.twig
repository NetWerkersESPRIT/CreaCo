{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>État</th>
                <td>{{ mission.state }}</td>
            </tr>
            <tr>
                <th>Idée Associée</th>
                <td>{{ mission.implementIdea ? mission.implementIdea.title : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ mission.createdAt ? mission.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dernière mise à jour</th>
                <td>{{ mission.lastUpdate ? mission.lastUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mission_index') }}">Retour à la liste</a>

    <a href="{{ path('app_mission_edit', {'id': mission.id}) }}">Modifier</a>

    {{ include('mission/_delete_form.html.twig') }}
{% endblock %}
